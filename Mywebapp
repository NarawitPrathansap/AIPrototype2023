from flask import Flask, request, render_template, jsonify
import os
from werkzeug.utils import secure_filename

app = Flask(__name__)
app.config['UPLOAD_FOLDER'] = 'uploads/'

@app.route('/submit-form', methods=['POST'])
def handle_form_submission():
    if 'userFile' in request.files:
        file = request.files['userFile']
        if file.filename != '':
            filename = secure_filename(file.filename)
            filepath = os.path.join(app.config['UPLOAD_FOLDER'], filename)
            file.save(filepath)
            # Process the image with your model here

    user_question = request.form.get('userQuestion', '')
    # Process the question here if necessary

    # For demonstration, just redirect to home with a success message
    # In a real application, you would return the prediction results
    return render_template('index.html', message="Form submitted successfully!")
if __name__ == "__main__":
    app.run(host='0.0.0.0',debug=True,port=5001)#host='0.0.0.0',port=5001

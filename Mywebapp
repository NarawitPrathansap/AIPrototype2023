from flask import Flask, request, render_template
import sys
import json
import os

app = Flask(__name__)


@app.route("/home")  
def homefn():
    return render_template("web.html",title='home')

@app.route('/upload', methods=['POST'])
def upload_file():
    if request.method == 'POST':
        # Capture the text input
        message = request.form['message']
        print(f"Message: {message}")  # Do something with the message
        
        # Capture and save the file
        file = request.files['file']
        if file:  # Check if the file exists
            filename = file.filename
            save_path = os.path.join('uploads', filename)  # Define save path
            file.save(save_path)  # Save file to the defined path
            print(f"File saved to {save_path}")  # Logging

        return render_template("web.html", title='Upload Complete', name='Upload complete')

    # Fallback HTML form (consider moving this to a dedicated template)
    return '''
    <!doctype html>
    <title>Upload new File</title>
    <h1>Upload new File</h1>
    <form method=post enctype=multipart/form-data>
      <input type=file name=file>
      <input type=submit value=Upload>
    </form>
    '''


if __name__ == "__main__":
    app.run(host='0.0.0.0',debug=True,port=5001)#host='0.0.0.0',port=5001
